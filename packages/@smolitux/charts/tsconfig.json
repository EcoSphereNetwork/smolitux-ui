{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@smolitux/theme": ["../../theme/src"],
      "@smolitux/utils": ["../../utils/src"],
      "@smolitux/core": ["../../core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.old.tsx",
    "**/*.old.*.tsx",
    "**/*.stories.tsx"
  ]
}
