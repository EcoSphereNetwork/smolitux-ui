{
  "name": "@smolitux/layout",
  "version": "0.2.1",
  "description": "Layout components for Smolitux UI",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "dev": "nodemon --watch src --exec \"node build.js\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "build:js": "node build.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --skipLibCheck"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@smolitux/core": "^0.2.1",
    "@smolitux/theme": "^0.2.1",
    "@smolitux/utils": "^0.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "esbuild": "^0.25.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.9",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
