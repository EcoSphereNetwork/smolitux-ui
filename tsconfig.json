{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@smolitux/ai": ["packages/@smolitux/ai/src"],
      "@smolitux/ai/*": ["packages/@smolitux/ai/src/*"],
      "@smolitux/blockchain": ["packages/@smolitux/blockchain/src"],
      "@smolitux/blockchain/*": ["packages/@smolitux/blockchain/src/*"],
      "@smolitux/charts": ["packages/@smolitux/charts/src"],
      "@smolitux/charts/*": ["packages/@smolitux/charts/src/*"],
      "@smolitux/community": ["packages/@smolitux/community/src"],
      "@smolitux/community/*": ["packages/@smolitux/community/src/*"],
      "@smolitux/core": ["packages/@smolitux/core/src"],
      "@smolitux/core/*": ["packages/@smolitux/core/src/*"],
      "@smolitux/federation": ["packages/@smolitux/federation/src"],
      "@smolitux/federation/*": ["packages/@smolitux/federation/src/*"],
      "@smolitux/layout": ["packages/@smolitux/layout/src"],
      "@smolitux/layout/*": ["packages/@smolitux/layout/src/*"],
      "@smolitux/media": ["packages/@smolitux/media/src"],
      "@smolitux/media/*": ["packages/@smolitux/media/src/*"],
      "@smolitux/resonance": ["packages/@smolitux/resonance/src"],
      "@smolitux/resonance/*": ["packages/@smolitux/resonance/src/*"],
      "@smolitux/testing": ["packages/@smolitux/testing/src"],
      "@smolitux/testing/*": ["packages/@smolitux/testing/src/*"],
      "@smolitux/theme": ["packages/@smolitux/theme/src"],
      "@smolitux/theme/*": ["packages/@smolitux/theme/src/*"],
      "@smolitux/utils": ["packages/@smolitux/utils/src"],
      "@smolitux/utils/*": ["packages/@smolitux/utils/src/*"],
      "@smolitux/voice-control": ["packages/@smolitux/voice-control/src"],
      "@smolitux/voice-control/*": ["packages/@smolitux/voice-control/src/*"],
      "@smolitux/*": ["packages/@smolitux/*/src"]
    }
  },
  "include": ["packages", "docs"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/playground"
  ]
}
