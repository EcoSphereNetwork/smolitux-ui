{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@smolitux/*": ["packages/@smolitux/*/src"],
      "@smolitux/*/*": ["packages/@smolitux/*/src/*"]
    }
  },
  "include": ["packages", "docs"],
  "exclude": [
    "node_modules",
    "dist",
    "packages/playground"
  ]
}
