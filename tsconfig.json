{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@docusaurus/module-type-aliases"]
  },
  "include": ["docs"],
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "packages/playground"
  ]
}
