{
  "name": "smolitux-ui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@smolitux/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "lerna run lint",
    "storybook": "cd packages/docs && npm run storybook",
    "build-storybook": "cd packages/docs && npm run build-storybook",
    "dev": "cd packages/playground && npm run dev",
    "prepare-release": "npm run lint && npm run test && npm run build",
    "release": "lerna version --conventional-commits --yes",
    "publish": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lerna": "^6.6.2",
    "ts-jest": "^29.1.2",
    "wait-on": "^7.2.0"
  }
}
