{
  "name": "smolitux-ui-monorepo",
  "version": "0.2.2",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "packages/*",
    "packages/@smolitux/*"
  ],
  "scripts": {
    "install-deps": "lerna exec -- npm install",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build": "./build-all.sh",
    "build:utils": "cd packages/@smolitux/utils && npm run build",
    "build:core": "cd packages/@smolitux/core && npm run build",
    "build:ai": "cd packages/@smolitux/ai && npm run build",
    "build:blockchain": "cd packages/@smolitux/blockchain && npm run build",
    "build:resonance": "cd packages/@smolitux/resonance && npm run build",
    "build:testing": "cd packages/@smolitux/testing && npm run build",
    "build:all": "lerna run build --parallel",
    "test": "lerna run test --parallel",
    "test:watch": "lerna run test --parallel -- --watch",
    "test:coverage": "lerna run test --parallel -- --coverage",
    "test:ci": "lerna run test --parallel -- --ci --coverage",
    "test:update-snapshots": "lerna run test --parallel -- --updateSnapshot",
    "test:e2e": "playwright test",
    "test:a11y": "jest --testMatch=\"**/*.a11y.test.{ts,tsx}\"",
    "test:a11y:report": "jest --testMatch=\"**/*.a11y.test.{ts,tsx}\" --json --outputFile=a11y-report/results.json",
    "test:storybook": "test-storybook",
    "test:visual": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "test:visual:update": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --auto-accept-changes",
    "test:visual:local": "./scripts/run-visual-tests.sh",
    "test:storybook:a11y": "test-storybook --config-dir .storybook/test-runner",
    "test:coverage-report": "node scripts/generate-coverage-report.js",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint --parallel -- --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "lerna run dev --parallel",
    "prepare": "husky install",
    "docs:api": "typedoc",
    "docs:generate": "typedoc --options typedoc.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.41.2",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-actions": "^7.6.17",
    "@storybook/addon-controls": "^7.6.17",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-onboarding": "^1.0.11",
    "@storybook/addon-toolbars": "^7.6.17",
    "@storybook/addon-viewport": "^7.6.17",
    "@storybook/addon-webpack5-compiler-swc": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/builder-webpack5": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-webpack5": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@storybook/test-runner": "^0.16.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jest-axe": "^3.5.9",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "axe-core": "^4.8.4",
    "axe-playwright": "^2.1.0",
    "babel-jest": "^29.7.0",
    "cac": "^6.7.14",
    "concurrently": "^8.2.2",
    "eslint": "^9.23.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fdir": "^6.4.3",
    "fs-extra": "^11.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "jest-junit": "^16.0.0",
    "jest-matcher-utils": "^29.7.0",
    "jest-snapshot": "^29.7.0",
    "lerna": "^6.6.2",
    "lines-and-columns": "^2.0.4",
    "lint-staged": "^15.5.0",
    "nx": "^15.9.7",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "react-test-renderer": "^18.3.1",
    "source-map": "^0.7.4",
    "storybook": "^7.6.17",
    "chromatic": "^12.1.1",
    "ts-jest": "^29.3.0",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "typedoc-plugin-markdown": "^3.14.0"
  },
  "dependencies": {
    "esbuild": "^0.19.12",
    "lucide-react": "^0.484.0",
    "npmlog": "^7.0.1",
    "readable-stream": "^4.7.0",
    "tinyglobby": "^0.2.0",
    "y18n": "5.0.8"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
