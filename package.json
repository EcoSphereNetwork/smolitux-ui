{
  "name": "smolitux-ui-monorepo",
  "version": "0.3.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/@smolitux/*"
  ],
  "scripts": {
    "lint": "eslint packages/@smolitux --ext .ts,.tsx",
    "test": "jest",
    "build": "tsup",
